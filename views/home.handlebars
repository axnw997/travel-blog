<main id="main">
    {{#each data}}
    <div class="blog-cards">
        <section class="article-section">
            <h1>{{this.title}}</h1>
            <div id="date-time">Publish: {{this.blog_date}} {{this.blog_time}}</div>
            <img class="blog-img" src="{{this.img_link}}" alt="Article Image">
            <div id="main-content">
                {{{this.article}}}
            </div>
            <button id="like-button">Like</button>
        </section>

        <aside class="author-section">
            <h2>Author</h2>
            <img src="{{this.avatar_link}}" alt="Author Avatar">
            <a href="#">{{this.username}}</a>
            <p>{{this.description}}</p>
            <ul>
                {{#each author.otherArticles}}
                <li><a href="{{this.link}}">{{this.title}}</a></li>
                {{/each}}
            </ul>
        </aside>

        <section class="comments-section">
            <h2>Comments</h2>
            {{#each this.comments}}
            <div class="comment">
                <img src="{{this.avatar_link}}" alt="Commenter Avatar">
                <div>{{this.text}}</div>
                <div class="comment-time">{{this.date}}</div>
            </div>
            {{/each}}

        </section>
    </div>

    {{/each}}

</main>

<!-- Pagination buttons -->
<div id="pagination">
    <button id="prev-page">Previous</button>

    <!-- Page Numbers -->
    <div id="page-numbers">
        {{#each pageNumbers}}
        <button class="page-number" data-page="{{this}}">{{this}}</button>
        {{/each}}
    </div>

    <button id="next-page">Next</button>
</div>

