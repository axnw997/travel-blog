<div class="blog-card">
    <section class="blog-filter-container">
        <div class="blog-filter">
            <div class="search-box-container">
                <input type="text" class="search-input" placeholder="Search Article / Author">
                <button class="search-btn">
                    <svg class="feather feather-search" fill="none" height="24" stroke="currentColor"
                        stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24"
                        xmlns="http://www.w3.org/2000/svg">
                        <circle cx="11" cy="11" r="8" />
                        <line x1="21" x2="16.65" y1="21" y2="16.65" />
                    </svg>
                </button>
            </div>

            <select class="sort-by-selection">
                <option value="">Sort By</option>
                <option value="upload-time">Upload Time</option>
                <option value="popularity">Popularity</option>
            </select>
        </div>
    </section>
</div>
